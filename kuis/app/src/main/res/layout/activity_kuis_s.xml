<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kuis"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/scoreSen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:0"
                android:freezesText="true"/>
            <TextView
                android:id="@+id/countSen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question: 1/x"
                android:layout_below="@+id/score"
                android:freezesText="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/timerSen"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="00:30"
            android:layout_alignParentEnd="true"
            android:freezesText="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/soalSen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="soalnya"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/opta"
        android:freezesText="true"/>
    <TextView
        android:id="@+id/answerSen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="soalnya"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:freezesText="true"/>

    <Button
        android:id="@+id/optaSen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="16dp"
        android:freezesText="true"/>
    <Button
        android:id="@+id/optbSen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="16dp"
        android:freezesText="true"/>
    <Button
        android:id="@+id/optcSen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="16dp"
        android:freezesText="true"/>

</LinearLayout>
</ScrollView>